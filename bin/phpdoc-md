#!/usr/bin/env php
<?php

$autoLoadPaths = [
    __DIR__ . '/vendor/autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];
foreach ( $autoLoadPaths as $autoloader ) {
    if ( file_exists( $autoloader ) ) {
        require $autoloader;
        break;
    }
}

use PHPDocsMD\Console\CLI;

try {
    $cli = new CLI();
    $code = $cli->run();
    exit( $code );
}
catch ( Exception $e ) {
    exit( 2 );
}
